#!/bin/bash

# Check out all submodules to the same branch

branch=$1

function list_submodules() {
  git submodule foreach --recursive --quiet 'echo $sm_path'
}

for m in `list_submodules`; do
  echo Checking out submodule $m to branch $branch
  pushd $m > /dev/null
  git checkout $branch
  popd > /dev/null
done